<% @page_title = "Login" -%>
<div class= "sign_form">
  <br>

  <div class="row justify-content-md-center">
    <div class="col-md-auto">
      <h1>Log in</h1>
    </div>
  </div>

  <br>

  <%= form_tag(:action => 'authenticate') do %>
    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        <p>Username:</br>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        <%= text_field_tag(:username) %></p>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        <p>Password:</br>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        <%= password_field_tag :password %></p>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        <p>Repeat password:</br>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        <%= password_field_tag :password_confirmation %></p>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        <%= submit_tag("Log In", class: "btn btn-primary")  %>
      </div>
    </div>
  <% end %>
</div>
